                            .s-info__data
                                .s-info__item
                                    +icon2('edit')
                                    span 23
                                .s-info__item
                                    +icon2('user')
                                    span 4000
                    .s-block__link
                        .contacts-mess.youtube-share
                            +icon('youtube')
                        .s-block__link-info
                            .s-info__title Youtube
                            .s-info__data
                                .s-info__item
                                    +icon2('video-circle')
