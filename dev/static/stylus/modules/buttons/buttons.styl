.slider-navigation
  display flex
  align-items center
.slider-button-prev,.slider-button-next,.review-button-prev,.review-button-next,.practice-button-next,.practice-button-prev
  display flex
  justify-content center
  align-items center
  background-color #fff
  border-radius 50%
  transition ease .2s
  size(52px)
  padding 20px
  &:hover
    box-shadow: 0 0 4px 3px #0000000a;
  &:active
    box-shadow: 0 0 4px 3px transparent;
    transform scale(0.9)
  .icon
    fill transparent
    stroke #E0202B
    size(15px)
    transition ease .2s
