.h-top-left__location
  display flex
  align-items center
  margin-right 72px
  cursor pointer
  position relative
  .icon
    size(24px)
    margin-right 10px
    fill #fff
  .icon-arrow-down
    size(18px)
    margin-right 0
  span
    margin-right 10px
    color #fff
    font-weight 400
    font-size 18px
.header-top
  background-color #1F232A
  padding 10px 0
.header-top__container
  display flex
  align-items center
  justify-content space-between
.header-top__left
  display flex
  align-items center
  position relative
.h-top-left__consulting
  display flex
  align-items center
.consulting-count
  color #fff
  font-family 'Montserrat',sans-serif
  font-size 24px
  font-weight 700
  background-color #E0202B
  border-radius 37px
  padding 0 20px
  height 32px
  line-height 1.3
  margin-right 15px
