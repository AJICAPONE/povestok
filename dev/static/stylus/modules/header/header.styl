.h-top-left__location
  display flex
  align-items center
  margin-right 72px
  cursor pointer
  .icon
    size(24px)
    margin-right 10px
    fill #fff
  .icon-arrow-down
    size(18px)
    margin-right 0
  span
    margin-right 10px
    color #fff
    font-weight 400
    font-size 18px
.header-top
  background-color #1F232A
  padding 10px 0
.header-top__container
  display flex
  align-items center
  justify-content space-between
.header-top__left
  display flex
  align-items center
.h-top-left__consulting
  display flex
  align-items center
.consulting-count
  color #fff
  font-family 'Montserrat',sans-serif
  font-size 24px
  font-weight 700
  background-color #E0202B
  border-radius 37px
  padding 0 20px
  height 32px
  line-height 1.3
  margin-right 15px
.consulting-text
  font-size 18px
  color #fff
  font-weight 600
  text-transform uppercase
.header-top__right
  display flex
  align-items center
.h-top-right__button
  display flex
  align-items center
  margin-right 73px
  cursor pointer
  &:last-child
    margin-right 0
  span
    color #fff
    font-size 18px
  .icon
    size(30px)
    fill transparent
    stroke #fff
    margin-right 8px
  .icon-sale
    stroke-width 1.3
.header-bottom__container
  display flex
  align-items center
  flex-direction column
.header-bottom__contacts
  display flex
  align-items center
  justify-content space-between
  width 100%
.h-contacts
  display flex
  align-items center
.h-social__link
  display flex
  justify-content center
  align-items center
  border-radius 50%
  background-color #f5f5f5
  size(28px)
  padding 5px
  margin-right 10px
  &:last-child
    margin-right 0
  .icon
    size(16px)
    fill #fff
.h-social__links
  display flex
  align-items center
.h-phone
  margin-right 70px
  outline none
  line-height 1.2
  span
    color #405575
    font-size 13px
.h-phone__text
  font-size 18px
  font-weight 600
  font-family 'Montserrat',sans-serif

.h-telegram
  background-color #3DB6F1
.h-whatsapp
  background-color #71BF44
.h-vk
  background-color #07689F
.h-logo
  height 54px
  .icon
    width 400px
    height 100%
  .icon-logo2
    display none
    width max-content
.header-bottom__contacts
  padding 20px 0
.h-social__block
  line-height 1.2
  span
    color #405575
    font-size 13px
.header-bottom__menu
  width 100%
  padding-bottom 28px
.h-navigation
  display flex
  justify-content space-between
  align-items center
.h-navbar
  display flex
  align-items center
ul.h-menu__list
  display flex
  align-items center
  li
    margin-right 20px
    &:last-child
      margin-right 0
    a
      font-family 'Montserrat',sans-serif
      font-size 18px
      color #1F232A
      font-weight 600
      text-transform uppercase
      transition ease .3s
      &:hover
        color #E0202B
.h-search
  display flex
  justify-content center
  align-items center
  size(48px)
  background-color #F6F6F6
  border-radius 50%
  cursor pointer
  transition ease .3s
  .icon
    fill transparent
    size(19px)
    stroke #3D3D3D
    stroke-width 1.5
    transition ease .3s
  &:hover
    background-color #E0202B
    .icon
      stroke #fff

.h-menu
  margin-right 24px
.h-callback
  display flex
  align-items center
  background-color #EDEDED
  height 48px
  border-radius 39px
  padding 15px 23px
  cursor pointer
  transition ease .3s
  min-width 231px
  position relative
  span
    font-family 'Montserrat',sans-serif
    font-size 15px
    font-weight 500
    transition ease .3s
  .icon
    size(21px)
    fill transparent
    stroke #292929
    stroke-width 1.5
    margin-right 23px
    transition ease .3s
  &:hover
    background-color #E0202B
    .icon
      stroke #fff
    span
      color #fff





