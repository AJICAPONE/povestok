  display none
  position absolute
  top 36px
  z-index 10
.h-menu__item
  position relative
.h-item__item-depth2
  margin-bottom 12px
  white-space nowrap
  color #8189A0 !important
  &:hover
    color #e0202b !important
.header-nav-menu__bar
  display none
  position absolute
  top 222px
  width 100%
