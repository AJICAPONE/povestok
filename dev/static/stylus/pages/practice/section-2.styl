.practice-main__content
  .article-content
    margin-bottom 70px
.practice-main-content
  width 100%
  .see-article__title
    font-size 28px
    display flex
    align-items center

  .see-article__desc
    font-size 18px
  .practice-tag__service
    display flex
    align-items center
    background-color #F0F0F0
    padding 6px 28px
    border-radius 38px
    font-size 16px
    color #686868
    font-family 'Open Sans',sans-serif
    font-weight 400
    margin-right 12px
.content-img__wrapper
  img
    width 100%
    height 100%
    object-fit contain
    border-radius 23px
    margin-bottom 16px
  span
    display block
    font-size 16px
    color #9F9F9F
    padding-left 50%
    text-align right
.practice-steps
  display flex
  flex-direction column
  gap 20px
  margin-bottom 32px
.practice-step
  background-color #fff
  padding 35px 17px
  border-radius 32px
.practice-step__title
  font-size 30px
  font-family 'Montserrat',sans-serif
  font-weight 700
  color #3D3C3C
  margin-bottom 12px
.practice-step__desc
  font-size 20px
  color #686868
