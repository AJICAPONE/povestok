.congrat-wrapper
  display flex
  justify-content center
  align-items center
  flex-direction column
  background-color #fff
  border-radius 23px
  padding 70px 8% 60px 8%
  .sub-title-3
    font-size 42px
  .icon
    size(400px,250px)
.congrat-desc
  font-size 26px
  margin-bottom 20px
  text-align center
  padding 0 10%
.job-over
  .site-reviews__wrapper
    background-color #686868
  .s-review__item
    display flex
    justify-content center
    align-items center
    width 160px
    height 96px
    .icon
      size(100px,32px)
  .s-review__title
    width 35%
.congratulations
  padding-top 0
.see-also__partners
  .see-also__left
    .sub-title
      font-size 28px
.job-over__rating
  margin-bottom 30px
  .site-reviews__wrapper
    padding 0
    padding-bottom 25px
    background-color transparent
    align-items center
    border-radius 0
    border-bottom 1px solid #D0D0D0
    .h-logo
      height 74px
      .icon
        min-width 457px
  .s-review__item
    background-color transparent
    border 1px solid #000
    min-width 180px
.congratulations-2
  padding-top 0
  .congrat-wrapper
    .icon
      size(200px)
.job-over2__also-list
  display grid
  grid-template-columns repeat(2,1fr)
  gap 35px
.job-over2__left
  min-width 38%
.job-over2__also-item
  display flex
  flex-direction column
  align-items center
  justify-content center
  border 1px dashed
  padding 35px
  border-radius 16px
.job-over2__item--tag
  display flex
  align-items center
  justify-content center
  background-color #DDDBDB
  margin-bottom 25px
  border-radius 23px
  height 36px
  padding 8px 15%
  width 100%
  max-width 180px
  color #000
.job-over2__item--desc
  text-align center
  margin-bottom 25px
.job-over2__item--download
  display flex
  align-items center
  span:first-child
    display flex
    justify-content center
    align-items center
    background-color #CC1513
    padding 9px 20px
    height 36px
    width max-content
    border-radius 15px
    margin-right 16px
    font-family 'Montserrat',sans-serif
    font-size 16px
    font-weight 500
    color #fff
  span:last-child
    font-family 'Montserrat',sans-serif
    font-size 16px
    color #AAAAAA
    font-weight 500