.employer
  padding-top 0
.employer-block
  display flex
  gap 30px
  justify-content space-between
  margin-bottom 30px
.employer-left
  display flex
  flex-direction column
  align-items center
  width 30%
  background-color #fff
  padding 54px 25px
  border-radius 23px
.employer-right
  width 70%
  background-color #fff
  padding 54px 45px
  border-radius 23px
.employer-left
  .article-widget__job
    margin-bottom 16px
  .team-employer__city
    margin-bottom 28px
    .icon
      size(25px)
  .contacts-mess
    size(50px)
  .button-2
    font-size 17px
    font-weight 400
    border-radius 10px
    margin-bottom 17px
.employer-right
  .sub-title
    font-size 32px
  .sub-title__desc
    margin-bottom 40px
.employer-right__sert
  margin-bottom 40px
  &:last-child
    margin-bottom 0
.employer-sert__pictures
  display flex
  align-items center
  flex-wrap wrap
  gap 16px
.employer-sert__picture
  display flex
  height 132px
  img
    background-color #f5f5f5
    width 100%
    height 100%
    min-width 132px
    max-width 132px
    max-height 132px
    object-fit cover
    border-radius 19px
.employer-info
  background-color #fff
  border-radius 23px
  padding 40px 45px