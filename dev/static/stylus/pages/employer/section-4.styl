.video-employer
  .b-articles__title
    display flex
    align-items center
    margin-bottom 0
    span
      font-size 32px
      margin-left 15px
  .b-articles__subtitle
    font-size 32px
.videos .video-employer__list
  display grid
  grid-template-columns repeat(3,1fr)
  gap 30px
.video-employer__top
  display flex
  align-items center
  justify-content space-between
  margin-bottom 28px

.video-employer__item
  background-color #fff
  border-radius 23px
  box-shadow: 0px 4px 49px -17px #00000040;
  iframe
    width 100%
    height 176px
    border-radius 23px 23px 0 0
.video-employer__info
  padding 20px
.video-employer__desc
  font-size 20px
  font-family 'Montserrat',sans-serif
  font-weight 600
  color #2D2C2C
.video-employer__title
  font-size 18px
  color #2D2C2C
.video-employer__link
  display flex
  justify-content center
  align-items center
  background-color #E0202B
  font-size 16px
  border-radius 34px
  height 36px
  padding 10px 23px
  color #fff
.video-mobile__title
  display none
  margin-right 15px
  .icon
    size(37px,30px)
.video-employer__list
  .swiper-wrapper
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;

.video-employer
  .button-3
    margin 0 auto
    display none
