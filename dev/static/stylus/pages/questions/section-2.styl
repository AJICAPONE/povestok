.themes-tabs,.themes-item__tabs
  display flex
  align-items center
  flex-wrap wrap
  column-gap 15px
  row-gap 15px
  margin-bottom 36px
.themes-tab,.themes-item__tab
  display flex
  align-items center
  justify-content center
  background-color #fff
  border-radius 11px
  height 36px
  font-weight 600
  font-size 12px
  color #3D3C3C
  text-transform uppercase
  border 1px solid #3D3C3C
  transition ease .2s
  cursor pointer
  padding 11px 23px
  &:hover
    border 1px solid #E0202B
.themes-tab.active
  background-color #3D3C3C
  color #fff
  &:hover
    border 1px solid #3D3C3C
.themes-question__item
  border-radius 23px
  background-color #e7e7e7
  border 1px solid #878787
  margin-bottom 30px
  &:last-child
    margin-bottom 0
.themes-item__top
  padding 34px 54px
.themes-item__bottom
  padding 21px 54px
  background-color #fff
  border-radius 23px
  .themes-item__desc
    margin-bottom 23px
.themes-item__profile
  display flex
  align-items center
  margin-bottom 13px
  img
    size(66px)
    min-width 66px
    margin-right 12px
.themes-info__name
  font-size 20px
  font-family 'Montserrat',sans-serif
  font-weight 600
  color #383838
  margin-bottom 2px
.themes-info__job
  font-size 18px
  color #383838
.themes-item__desc
  font-size 18px
  color #383838
.themes-item__title
  font-size 20px
  color #535353
  margin-bottom 13px
.themes-item__tabs
  margin-bottom 0
.themes-load-more
  display none
  margin 0 auto
.themes-question__list
  margin-bottom 30px