.tarif-advantages
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap 20px
.tarif-advantages__item
  display flex
  flex-direction column
  background-color #fff
  border-radius 23px
  padding 28px 8px 8px 8px
.t-item__list
  display flex
  flex-direction column
  background-color #EDF1F2
  border-radius 21px
  padding 20px
.t-item__tag
  display flex
  justify-content center
  align-items center
  margin 0 auto
  margin-bottom 20px
  background-color transparent
  height 32px
  padding 6px 12px
  border-radius 17px
  font-size 16px
  width max-content
.t-tag__orange
  background-color #FFE7D5
  color #FE5F05
.t-tag__green
  background-color #D9EADB
  color #308138
.t-tag__yellow
  background-color #FFF2C2
  color #E29A2F
.t-item__name
  text-align center
  font-family 'Montserrat',sans-serif
  font-weight 700
  font-size 28px
  margin-bottom 16px
.t-item__par
  display flex
  align-items center
  margin-bottom 12px
  &:last-child
    margin-bottom 0
  span
    font-size 16px
    font-family 'Montserrat',sans-serif
    font-weight 500
    line-height 1.3
  .icon
    size(18px)
    min-width 18px
    fill #FF5454
    margin-right 12px