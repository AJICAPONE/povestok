.m-menu__list
  display flex
  align-items center
  justify-content space-between
.m-menu__item
  font-size 18px
  color #3D3C3C
  transition ease .2s
  &:hover
    color #E0202B
.m-app__menu
  margin-bottom 50px
.m-app__text
  font-size 16px
  color #B3B3B3
  line-height 1.3
  margin-bottom 36px
.m-app__main
  display flex
  justify-content space-between
  align-items center
  background-color #fff
  border-radius 23px
  padding 30px 36px
.m-left__title
  font-family 'Montserrat',sans-serif
  font-size 32px
  font-weight 700
  margin-bottom 5px
  color #3D3C3C
.m-left__desc
  color #9F9F9F
  font-size 18px
.m-main__right
  display flex
  align-items center
.m-main__link
  width 200px
  margin-right 47px
  &:last-child
    margin-right 0
  img
    width 100%
    height 100%
