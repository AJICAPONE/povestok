.use-list
  display grid
  grid-template-columns: repeat(4, 1fr);
  gap: 28px;
.use-item
  display flex
  flex-direction column
  align-items center
  padding: 32px 20px;
  border 1px dashed #BEBEBE
  border-radius 19px
  .icon
    size(50px)
    margin-bottom 24px
  span
    text-align center
    font-family 'Montserrat',sans-serif
    font-size 16px
    font-weight 600
    color #3D3C3C
    padding 0 10px
