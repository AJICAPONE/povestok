.reviews
  overflow hidden
.reviews-card__img
  width 100%
  height 100%
  margin-bottom 14px
.reviews-slider__card
  display flex
  flex-direction column
  min-height 100%
  background-color #fff
  border-radius 26px
  padding 17px 20px
  max-width 342px
.review-card__social
  margin-right 12px
  img
    size(45px)
    min-width 45px
.review-card__user
  display flex
  margin-bottom 7px
.review-card__person
  display flex
  align-items center
.review-person__name
  font-weight 700
  font-size 16px
  color #363636
  margin-right 8px
.reveiw-person__city
  color #939393
  font-size 16px
.review-card__text
  font-size 15px
  color #6B6B6B
.reviews-wrapper
  display flex
  flex-direction column
  justify-content center
  align-items center

.reviews-slider
  margin-bottom 33px