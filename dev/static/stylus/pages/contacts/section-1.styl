.contacts-info
  padding-top 0
.contacts-grid
  display grid
  grid-template-columns repeat(5, 1fr)
  gap 24px
.contacts-block
  display flex
  flex-direction column
  justify-content center
  align-items center
  background-color #F8F8F8
  border-radius 16px
  padding 60px 23px

  &:last-child
    grid-area: 1 / 4 / 2 / 6;
.contacts-icon
  display flex
  justify-content center
  align-items center
  margin-bottom 24px
  .icon
    size(73px)
.contacts-title
  font-weight 700
  font-family 'Montserrat',sans-serif
  font-size 20px
  color #000
  margin-bottom 12px
.contacts-desc
  font-size 18px
  color #8B8B8B
  font-weight 500
  font-family 'Montserrat',sans-serif
.contacts-messengers
  display flex
  align-items center
  gap 20px
  margin-bottom 20px
.contacts-mess
  display flex
  justify-content center
  align-items center
  size(55px)
  border-radius 50%
  .icon
    fill #fff
    size(30px)
.contacts-mess__title
  font-size 20px
  font-weight 700
  font-family 'Montserrat',sans-serif
